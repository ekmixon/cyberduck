<project name="Cyberduck Native Libraries" basedir=".">

    <import file="../../build.xml"/>

    <property name="ikvm.home" value="${build}/ikvm"/>

    <target name="dll" if="platform.windows">
        <taskdef name="ikvmc" classname="net.ikvm.ant.IkvmcTask">
            <classpath path="${lib.ext}/ant-ikvmc.0.5.jar"/>
        </taskdef>
        <mkdir dir="${build}"/>
        <!-- Create DLL Cyberduck.Core -->
        <ikvmc target="library" out="${build}/Cyberduck.Core.dll" home="${ikvm.home}"
               classloader="ikvm.runtime.AppDomainAssemblyClassLoader" version="${version}.${revision}" debug="${ikvm.debug}"
               verbose="false">
            <arg value="-skipDuplicates"/>
            <fileset dir="${build}">
                <include name="activation.jar" />
                <include name="base64.jar" />
                <include name="bcpkix-jdk15on.jar" />
                <include name="bcprov-jdk15on.jar" />
                <include name="bcutil-jdk15on.jar" />
                <include name="checker-qual.jar" />
                <include name="commons-codec.jar" />
                <include name="commons-collections4.jar" />
                <include name="commons-io.jar" />
                <include name="commons-lang3.jar" />
                <include name="commons-logging.jar" />
                <include name="commons-net.jar" />
                <include name="commons-pool2.jar" />
                <include name="commons-text.jar" />
                <include name="core.jar" />
                <include name="dd-plist.jar" />
                <include name="error_prone_annotations.jar" />
                <include name="failureaccess.jar" />
                <include name="fast-md5.jar" />
                <include name="gson.jar" />
                <include name="guava.jar" />
                <include name="httpclient-win.jar" />
                <include name="httpclient.jar" />
                <include name="httpcore.jar" />
                <include name="httpmime.jar" />
                <include name="j2objc-annotations.jar" />
                <include name="jackson-core-asl.jar" />
                <include name="jackson-mapper-asl.jar" />
                <include name="java-xmlbuilder.jar" />
                <include name="jets3t.jar" />
                <include name="jna-min.jar" />
                <include name="jna-platform.jar" />
                <include name="jsr305.jar" />
                <include name="jul-to-slf4j.jar" />
                <include name="listenablefuture.jar" />
                <include name="log4j-api.jar" />
                <include name="log4j-core.jar" />
                <include name="log4j-slf4j-impl.jar" />
                <include name="slf4j-api.jar" />
                <include name="sunec.jar" />
                <include name="sunmscapi.jar" />
                <include name="zxcvbn.jar" />
            </fileset>
            <outputfilter>
                <contains>IKVMC0109</contains>
                <contains>class is already available in referenced assembly</contains>
            </outputfilter>
            <resource name="/com/sun/jna/win32-x64/jnidispatch.dll" path="${build}/jnidispatch.dll"/>
        </ikvmc>
    </target>

    <target name="build" depends="version,dll" />
</project>
