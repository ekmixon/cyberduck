<project name="Cyberduck Native Libraries" basedir=".">

    <import file="../../build.xml"/>

    <property name="ikvm.home" value="${build}/ikvm"/>

    <target name="build" depends="version">
        <taskdef name="ikvmc" classname="net.ikvm.ant.IkvmcTask">
            <classpath path="${lib.ext}/ant-ikvmc.0.5.jar"/>
        </taskdef>
        <mkdir dir="${build}"/>
        <!-- Create DLL Cyberduck.Importer -->
        <ikvmc target="library" out="${build}/Cyberduck.Cli.dll" home="${ikvm.home}"
               classloader="ikvm.runtime.AppDomainAssemblyClassLoader" version="${version}.${revision}" debug="${ikvm.debug}"
               verbose="false">
            <reference path="${build}/Cyberduck.Core.dll"/>
            <reference path="${build}/Cyberduck.Protocols.dll"/>
            <reference path="${build}/Cyberduck.Cryptomator.dll"/>
            <arg value="-skipDuplicates"/>
            <fileset dir="${build}">
                <include name="asm.jar" />
                <include name="cli.jar" />
                <include name="commons-cli.jar" />
                <include name="dbus-java.jar" />
                <include name="hkdf.jar" />
                <include name="jansi.jar" />
                <include name="java-utils.jar" />
                <include name="jffi.jar" />
                <include name="jnr-a64asm.jar" />
                <include name="jnr-constants.jar" />
                <include name="jnr-enxio.jar" />
                <include name="jnr-ffi.jar" />
                <include name="jnr-posix.jar" />
                <include name="jnr-unixsocket.jar" />
                <include name="jnr-x86asm.jar" />
                <include name="secret-service.jar" />
            </fileset>
            <outputfilter>
                <contains>IKVMC0109</contains>
                <contains>class is already available in referenced assembly</contains>
            </outputfilter>
        </ikvmc>
    </target>
</project>
